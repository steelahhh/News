<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBrand</item>
        <item name="colorPrimaryDark">@color/colorBrand</item>
        <item name="colorAccent">@color/colorBrand</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationIcon</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:statusBarColor">@color/colorBrand</item>
        <item name="android:windowBackground">@color/colorBrand</item>
    </style>

    <style name="ToolbarTitleStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTitleStyle.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarNavigationIcon" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="SearchToolbarStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:tint">@color/white</item>
        <item name="queryBackground">@null</item>
        <item name="searchHintIcon">@null</item>>
        <item name="queryHint">Search</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView.ActionBar</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="AutoCompleteTextView.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:background">@null</item>
    </style>

    <style name="EditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:theme">@style/EditTextTheme</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppThemeToolbar" parent="Theme.MaterialComponents.Light.DialogWhenLarge">
        <item name="editTextStyle">@style/EditText</item>
        <item name="textInputStyle">@style/EditText</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorHintInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextStyle">@style/EditText</item>
    </style>

</resources>
